# Create Patient

mutation {
  createpatient (
    name: "Joel",
    surname: "Aldecua"
    password1: "Hello",
    password2: "Hello",
    email: "newData@gmail.com",
    dni: "1642875",
    age: "1997-10-19"
    gender: "Masculino",
    phone: "9797975786" ,
    social: "Activo",
    plan: "Medico"
  ){
  pacient{
      dni,
      phone,
    }
  }
}

# Select all Doctors

{
  doctors{
