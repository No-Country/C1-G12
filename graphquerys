# Login

mutation{
  tokenAuth(email: "enzo@clinic.com",
    password: "1234"){
  	token
  }
}

# Create Patient

mutation {
  createpatient (
    name: "Joel",
    surname: "Aldecua"
    password1: "Hello",
    password2: "Hello",
    email: "newData@gmail.com",
    dni: "1642875",
    age: "1997-10-19"
    gender: "Masculino",
    phone: "9797975786" ,
    social: "Activo",
    plan: "Medico"
  ){
  pacient{
      user{
        id
      }
      name,
      surname,
      email,
      dni,
      phone,
      social,
      plan
    }
  }
}

# Select all Doctors

{
  doctors{
    user{
      id
    }
    name,
    surname,
    speciality,
    turn,
    status
    }
}

# Create new Appointment

mutation{
  createappointment(
    idPatient: 2,
    idDoctor: 4,
    Date: "2021-12-18",
    Time: "09:45:15"
  ){
		appointment{
      id,
      Patient{
    		user{
          id
        }
        name
      },
      Doctor{
        user{
          id
        }
        name
      },
      Date,
      Time
    }
  }
}

# Get all Appointments

{
 allappointments{
  id,
  Patient{
    user{
      id
    },
    name,
    surname,
  }
  Doctor{
    user{
      id
    },
    name,
    surname
  }
  Date,
  Time,
  Status
} 
}

# Get all Appointment in a specific date

{
	dayappointments(day: "2021-12-15", status:"Pending"){
    id,
    Patient{
      user{
        id
      }
      name,
      surname
    }
    Doctor{
      user{
        id
      }
      name,
      surname
    }
    Date,
    Time,
    Status
  }
}

