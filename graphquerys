# Create new Appointment

mutation{
  createappointment(
    idPatient: 2,
    idDoctor: 4,
    Date: "2021-12-18",
    Time: "09:45:15"
  ){
		appointment{
      Pacient{
    		user{
          id
        }
        name
      },
      Doctor{
        name
      },
      Date,
      Time
    }
  }
}

# Get all Appointments

